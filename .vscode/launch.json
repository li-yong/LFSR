    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug LFSR",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/lfsr",
            // "args": ["-f", "${workspaceFolder}/test_files/test1.isc"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build_lfsr",
        }




    ]
}